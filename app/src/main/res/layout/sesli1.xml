<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_backgroundd"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Kart görünümü için CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="10dp"
            android:background="@android:color/white"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/txtSeviye1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seviye 1: Sesli Pratik"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/txtProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İlerleme: 0/10"
                    android:textSize="20sp"
                    android:textColor="#4CAF50"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="sans-serif" />

                <ImageView
                    android:id="@+id/maskotImage"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginBottom="24dp"
                    android:src="@drawable/gorsel1"
                    android:contentDescription="Maskot" />

                <TextView
                    android:id="@+id/wordTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="apple"
                    android:textSize="56sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722"
                    android:layout_marginBottom="32dp"
                    android:fontFamily="sans-serif-black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"
                    android:weightSum="2">

                    <ImageButton
                        android:id="@+id/soundButton"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_purple"
                        android:src="@drawable/ic_volume"
                        android:contentDescription="Ses Çal"
                        android:elevation="6dp"
                        android:padding="16dp" />

                    <ImageButton
                        android:id="@+id/micButton"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginStart="24dp"
                        android:layout_weight="1"
                        android:contentDescription="Mikrofon"
                        android:elevation="6dp"
                        android:padding="16dp"
                        android:src="@drawable/ic_sound"
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/feedbackIcon"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:visibility="gone"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:id="@+id/descriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lütfen kelimeyi doğru şekilde telaffuz edin."
                    android:textSize="20sp"
                    android:textColor="#616161"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="32dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
