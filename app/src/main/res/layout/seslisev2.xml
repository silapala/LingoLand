<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF">

    <!-- Maskot ve Açıklama -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/maskotImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/gorsel1"
            android:contentDescription="Maskot" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Kelimeleri doğru şekilde telaffuz etmeye çalış!"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- Kelime Kutusu -->
    <TextView
        android:id="@+id/wordTextView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/rounded_word_box"
        android:text="apple"
        android:textColor="#000"
        android:textSize="32sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Ses ve Mikrofon -->
    <LinearLayout
        android:id="@+id/soundLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/wordTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/soundButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_volume"
            android:contentDescription="Play Sound" />

        <ImageButton
            android:id="@+id/micButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_sound"
            android:contentDescription="Speak" />
    </LinearLayout>

    <!-- Doğru / Yanlış Geri Bildirim -->
    <ImageView
        android:id="@+id/feedbackIcon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/soundLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Feedback Icon" />

</androidx.constraintlayout.widget.ConstraintLayout>
